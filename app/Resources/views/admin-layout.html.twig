        <div class="navbar">
            <div class="navbar-inner">
                <div class="container-fluid">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".top-nav.nav-collapse,.sidebar-nav.nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    
                    <a href="#" class="brand">
                        <img src="{{ asset('bundles/sophicore/img/cake-logo.png') }}" alt="Cake">
                        Sophi
                    </a>

                    <!-- start: Header Menu -->
                    <div class="btn-group pull-right" >
                        <!-- start: User Dropdown -->
                        <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="icon-user"></i><span class="hidden-phone hidden-tablet">{% block usuario %}An&oacute;nimo{% endblock usuario %}</span>
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="#"><i class="icon-user"></i>&nbsp;Profile</a></li>
                            <li class="divider"></li>
                            <li><a href="login.html"><i class="icon-off"></i>&nbsp;Logout</a></li>
                        </ul>
                        <!-- end: User Dropdown -->
                    </div>
                    <!-- end: Header Menu -->
                    
                </div>
            </div>
        </div>
        {% endblock header %}
        <div id="under-header"></div>
        <!-- start: Header -->
        
            <div class="container-fluid">
            <div class="row-fluid">
                    
